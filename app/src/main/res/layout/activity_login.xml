<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activities.usuario.LoginActivity"

    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_degrade"
    android:backgroundTintMode="add"
    tools:context=".activities.usuario.LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/email_id_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/logonovacirc" />

    <EditText
        android:id="@+id/email_id_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_edit_text"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/branco"
        android:textColorHint="@color/branco"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/senha_id_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/botao_logar_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/botao_transparente_shape"
        android:singleLine="true"
        android:text="Logar"
        android:textColor="@color/branco"
        android:textSize="18sp"
        android:padding="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cadastrar_text_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/senha_id_login" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/botao_logar_google_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar_login"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"

        android:layout_marginEnd="32dp"
        android:background="@drawable/shape_edit_text"
        android:foreground="@drawable/shape_edit_text"
        app:buttonSize="standard"
        app:layout_constraintEnd_toStartOf="@+id/botao_logar_anonimamente_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_login" />

    <TextView
        android:id="@+id/esqueceu_senha_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/botao_logar_login"
        android:padding="20dp"
        android:text="Esqueceu a senha? Clique aqui!"
        android:textAlignment="center"
        android:textColor="@color/branco"
        android:textSize="16sp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botao_logar_google_login"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/cadastrar_text_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:onClick="abrirCadastro"
        android:padding="10dp"
        android:text="Cadastre-se"
        android:textColor="@color/branco"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/progressBar_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botao_logar_login" />

    <ProgressBar
        android:id="@+id/progressBar_login"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:progressBackgroundTintMode="screen"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cadastrar_text_login" />

    <EditText
        android:id="@+id/senha_id_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_edit_text"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/branco"
        android:textColorHint="@color/branco"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/botao_logar_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_id_login" />

    <Button
        android:id="@+id/botao_logar_anonimamente_id"
        style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
        android:layout_width="201dp"
        android:layout_height="0dp"
        android:layout_below="@id/progressBar_login"
        android:layout_margin="8dp"
        android:layout_marginStart="64dp"
        android:background="#F8DD0A0A"
        android:padding="8dp"
        android:text="Anonimo"
        android:textColor="@color/branco"
        app:layout_constraintBottom_toBottomOf="@+id/botao_logar_google_login"
        app:layout_constraintEnd_toEndOf="@+id/cadastrar_text_login"
        app:layout_constraintStart_toEndOf="@+id/botao_logar_google_login"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_login"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>