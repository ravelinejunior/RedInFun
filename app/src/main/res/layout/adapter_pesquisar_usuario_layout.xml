<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_botao_perfil_fragment"
        android:orientation="horizontal"
        android:paddingVertical="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/foto_perfil_id_adapter_pesquisar_layout"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:paddingHorizontal="8dp"
            android:src="@drawable/ic_pessoa_usuario" />

        <TextView
            android:id="@+id/nome_usuario_id_adapter_pesquisar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:textColor="@color/branco"
            android:textSize="18sp"
            android:paddingLeft="8dp"
            android:textStyle="bold"
            android:text="Nome Usuario" />
    </LinearLayout>
</LinearLayout>